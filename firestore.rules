
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Helper function to validate task data
    function isValidTask(taskData) {
      return taskData.title is string &&
             taskData.title.size() > 0 &&
             taskData.description is string &&
             taskData.completed is bool &&
             (taskData.createdAt == request.time || taskData.createdAt is timestamp);
    }
    
    function isValidImageRecord(recordData) {
      return recordData.userId is string &&
             recordData.originalImageUrl is string &&
             recordData.transformedImageUrl is string &&
             recordData.originalFileName is string &&
             recordData.prompt is string &&
             recordData.timestamp == request.time;
    }

    match /users/{userId}/tasks/{taskId} {
      allow read, delete: if isOwner(userId);
      allow create: if isOwner(userId) && isValidTask(request.resource.data);
      allow update: if isOwner(userId) && isValidTask(request.resource.data);
    }

    match /imageRecords/{recordId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId) && isValidImageRecord(request.resource.data);
    }
  }
}
